li#my-links.el
  //- h2.tit 링크
  ul.links(class='flex items-center justify-center gap-x-5')
    s_link_rep
      li.link
        a.link(
          href='[##_link_url_##]'
          target='_blank'
          title='[##_link_site_##]'
          class='text-h-400 hover:text-h-800 dark:hover:text-h-200 transition-colors flex items-center justify-center')
          //- linkIconRouter로 도메인별 아이콘 동적 처리
          i.ico(
            x-data='linkIconRouter'
            :class='iconClass'
            :style='iconStyle')

style(once='my-links-icons').
  #my-links .links .ico {
    width: 24px !important;
    height: 24px !important;
    display: flex !important;
    align-items: center;
    justify-content: center;
    font-size: 20px;
  }

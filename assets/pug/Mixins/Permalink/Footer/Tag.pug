s_tag_label
  #tags(
    x-data='tag'
    class='flex flex-wrap mt-1 gap-x-2 text-[0]')
    | [##_tag_label_rep_##]

style(once='tags')
  :postcss
    #tags {
      a {
        @apply text-sm rounded-md py-2 px-4 mt-2 bg-h-200 text-h-500;
        @apply dark:text-h-200 dark:bg-h-700;

        &:hover {
          @apply bg-h-600 text-h-200;
        }

        &::before {
          @apply mr-2 fa-tag;
        }
      }
    }
